    <div class="card text-white bg-dark mb-3 p-5">
        <div class="card-header"><h1 class="text-center" >LOGIN</h1></div>
        <div class="card-body">
            <form action="" class="form-group">
                <input class="form-control" type="text" placeholder="Username"> <br>
                <input class="form-control" type="password" placeholder="Password"> <br>
                <div class="d-grid">
                    <button class="btn btn-jindigo mb-2">
                        Login
                    </button>
                    <h6>
                        Are you new?
                    </h6>
                    <%= link_to 'Signup', "/signup",  class: "btn btn-jindigo" %>
                </div>
            </form>
        </div>
    </div>
</div>