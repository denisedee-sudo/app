<h1>toys#new</h1>
<p>Find me in app/views/toys/new.html.erb</p>

    <%= form_for(@toy) do |toy| %>
      <%= toy.label :name %> <br/>
      <%= toy.text_field :name, :placeholder => "Toy" %> <br/> <br/>
      <%= toy.label :description %> <br/> 
      <%= toy.text_field :description, :placeholder => "Description" %> <br/> <br/>
      <%= toy.submit "Submit" %> <br/> 
    <% end %>

<%= link_to 'Back', toys_path %>