<h1>toys#index</h1>
<p id="notice"><%= notice %></p>

<table class="table table-dark table-striped table-hover" >
  <thead>
    <tr>
      <th>Toy</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toys.each do |toy| %>
      <tr>
        <td><%= toy.name %></td>
        <td><%= toy.description %></td>
        <td><%= link_to 'Show', toy, method: :get,  class: "btn btn-jindigo" %></td>
        <td><%= link_to 'Edit', edit_toy_path(toy),  class: "btn btn-jindigo" %></td>
        <td><%= link_to 'Destroy', toy, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-jindigo" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New toy', new_toy_path,  class: "btn btn-jindigo" %>
